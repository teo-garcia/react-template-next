{
  "extends": "@teo-garcia/tsconfig-shared/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "paths": {
      "@/*": ["./app/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["@vitest/browser/context"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./jest.setup.js"
  ],
  "exclude": ["node_modules"]
}
